#!/usr/bin/env ruby

require 'oxidized'

trap("INT") { exit } # sinatra will otherwise steak this from us

begin
  Process.daemon unless $DEBUG
  Oxidized.new
rescue => e
  open Oxidized::Config::Crash, 'w' do |file|
    file.puts '-' * 50
    file.puts Time.now.utc
    file.puts e.message + ' [' + e.class.to_s + ']'
    file.puts '-' * 50
    file.puts e.backtrace
    file.puts '-' * 50
  end
  warn "ERROR: #{e}"
end

#!/usr/bin/env ruby20

$: << '.'
require 'pry' if ENV['DEV']
require 'oxidized'

begin
 Oxidized.new
rescue Exception => e
 open Oxidized::Config::Crash, 'w' do |file|
   file.puts '-' * 50
   file.puts Time.now.utc
   file.puts '-' * 50
   file.puts e.backtrace
   file.puts '-' * 50
   file.puts caller
 end
 raise
end
